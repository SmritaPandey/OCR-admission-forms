# Database Configuration
DATABASE_URL=postgresql+psycopg2://ocr_user:postgres@localhost:5433/ocr_admissions

# OCR Provider Selection
OCR_PROVIDER=tesseract

# Google Cloud Document AI (BEST for handwriting)
GOOGLE_DOCUMENT_AI_PROJECT_ID=
GOOGLE_DOCUMENT_AI_LOCATION=us
GOOGLE_DOCUMENT_AI_PROCESSOR_ID=
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Google Cloud Vision (Good for general OCR)
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_CLOUD_API_KEY=
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Azure Form Recognizer (BEST for structured forms)
AZURE_FORM_RECOGNIZER_ENDPOINT=
AZURE_FORM_RECOGNIZER_KEY=

# Azure Computer Vision
AZURE_VISION_ENDPOINT=
AZURE_VISION_KEY=

# AWS Textract (Good for forms and handwriting)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# ABBYY FineReader (Enterprise solution)
ABBYY_APPLICATION_ID=
ABBYY_PASSWORD=
ABBYY_SERVER_URL=

# File Upload Settings
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=["jpg","jpeg","png","pdf","tiff","bmp"]

# CORS Settings (Frontend URLs)
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]